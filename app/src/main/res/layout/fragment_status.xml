<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu.StatusFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
    <RelativeLayout
    android:layout_width="wrap_content"
        android:background="@drawable/fondo"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="11dp"
            android:text="Mi estado"
            android:textColor="#FAF9F9"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="29dp"
            android:text="Añade una actualización"
            android:textColor="#FAF9F9" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/fotoperfilstatus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/user_50px"
            app:civ_border="false"
            app:civ_border_color="#0E1E22" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/addstatus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/fotoperfilstatus"
            android:layout_alignBottom="@id/fotoperfilstatus"
            android:background="#EBF3F2"
            android:backgroundTint="#009688"
            android:src="@drawable/circle"
            android:tint="@color/Green" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="93dp"
            android:text="Recientes"
            android:textColor="#FAF9F9"
            android:textStyle="bold" />

    </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtNamecontacto"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Mis estados"/>



            </LinearLayout>
            <TextView
                android:id="@+id/txtMensajecontacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:text="Agregar nuevo estado"/>

        </LinearLayout>



    </LinearLayout>
</LinearLayout>